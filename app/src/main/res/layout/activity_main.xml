<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.zorro.seekbar.IndicatorSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:isb_auto_adjust_section_mark="true"
        app:isb_max="6"
        app:isb_min="1"
        app:isb_progress="2"
        app:isb_thumb_color="@color/color_99dbff"
        app:isb_thumb_radius="14dp"
        app:isb_thumb_text_color="@color/color_F75757"
        app:isb_thumb_text_size="14sp"
        app:isb_touch_to_seek="true"
        app:isb_track_size="7dp"
        />

    <com.zorro.seekbar.ClearCircleView
        android:id="@+id/ClearCircleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>
</LinearLayout>